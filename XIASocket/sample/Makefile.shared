.PHONY: clean

CFLAGS=-I../API
LDFLAGS =  -lprotobuf 

all: xs ps xc pc

xs: Server.c 
	gcc $(CFLAGS) $(LDFLAGS) -o $@ $< -L../API -lXsocket
ps: pingServer.c
	gcc $(CFLAGS) $(LDFLAGS) -o $@ $<  -L../API -lXsocket
xc: Client.c 
	gcc $(CFLAGS) $(LDFLAGS) -o $@ $<  -L../API -lXsocket
pc: pingClient.c
	gcc $(CFLAGS) $(LDFLAGS) -o $@ $< -L../API -lXsocket

clean:
	rm -f xs ps pc xc

