if [ $# -ne 0 ]; then
	if [ $1 = "-v" ]; then
		verbose=",3"
	else
		echo "usage:xdev"
		echo "  if no device specified, prints DAGs for all devices"
		exit 1
	fi
fi

hash nc 2>/dev/null || { echo "xdag requires netcat to be installed"; exit 1; }

[ "`ps aux | grep userlevel/click | grep -v grep`" = "" ] && { echo "click is not running!"; exit 1; }

printf "read config\nquit\n" | nc localhost 7777 | grep "::" | cut -d "(" -f1 | cut -s -d\  -f1$verbose

