getxid() {
	XID=`$xdir/xroute -v --device=$device | grep self | grep $1 | sed -r "s/\s+/\t/g" | cut -f2`
}
	
xdir=`dirname $0`

if [ "$1" = "-h" ]; then
	echo "usage:xdag [device...]"
	echo "  prints the DAG of the sepecified device(s)"
	echo "  if no device specified, prints DAGs for all devices"
	exit 1
fi

if [ $# -ne 0 ]; then
	devices=$@
else
	devices=`$xdir/xdev`
	rc=$?
	[ $rc -ne 0 ] &&  { echo $devices; exit 1; }
fi

for device in $devices
do
	getxid "AD"
	AD=$XID
	getxid "HID"
	HID=$XID
	echo "$device RE $AD $HID"
done
