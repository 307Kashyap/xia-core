import os
import re
import sys
import time
import rpyc
import msgpack
import argparse
import subprocess
import xiapyutils
from configparser import ConfigParser

BROKER='localhost'
PORT='44444'


host = 'cluster0'

cdn1 = ['abc', 'def', 'ghi', 'jkl']
cdn2 = ['abc', 'def', 'mno', 'pqr']
cdn3 = ['abc', 'pqr']

try:
    broker=rpyc.connect(BROKER, PORT)
    print 'connected to broker: %s:%s' % (BROKER, PORT)

    # try adding a cdn cluster
    broker.root.add_cdn_cluster('cluster0', 'dag-for-cluster-0')
    broker.root.add_cdn_cluster('cluster1', 'cluster 1''s dag')

    # test cid list updates
    broker.root.register_cids( 'cluster0', cdn1)
    broker.root.register_cids( 'cluster0', cdn1)
    broker.root.register_cids( 'cluster1', cdn2)

    broker.root.remove_cids('cluster1', cdn3)
    broker.root.remove_cids('cluster0', cdn3)

except Exception as err:
    print 'Unable to connect to the broker on %s:%s: %s' % (BROKER, PORT, str(err))
    sys.exit(-1)

