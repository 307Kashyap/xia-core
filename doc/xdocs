#!/bin/bash
XIADIR="$(dirname "$(cd "$(dirname "$0")" && pwd)")"
DOCS=$XIADIR/doc/html/

if [ ! -d $DOCS ]; then
	echo XIA documentation not found
	echo run make doc to create them
	exit
fi

if  hash lynx ; then
	BROWSER=lynx
elif hash elinks; then
	BROWSER=elinks
elif [ hash links ]; then
	BROWSER=links
fi

# xset q &2>/dev/null

if xset q &>/dev/null ; then
	BROWSER=xdg-open
fi

if [ $BROWSER ]; then
$BROWSER file:///$DOCS/index.html
else
	echo no browser found
fi
