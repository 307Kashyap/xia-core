#!/bin/sh
# build all of the XIA components

XIADIR="$(dirname "$(cd "$(dirname "$0")" && pwd)")" 

cd $XIADIR/click
./conf_user_click.sh
make -j8

cd $XIADIR/XIASocket/API
make

cd $XIADIR/XIASocket/sample
make

cd $XIADIR/example
make

cd $XIADIR/daemons/xroute
make

cd $XIADIR/daemons/xhcp
make

cd $XIADIR/daemons/nameserver
make

cd $XIADIR/dagaddr/cpp
cmake .
cmake .
make
make install

cd $XIADIR

